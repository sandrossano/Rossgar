<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFC281"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFC281">

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_peschiera"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true" />

        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator_peschiera"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignBottom="@+id/pager_peschiera"
            android:layout_centerHorizontal="true">

        </me.relex.circleindicator.CircleIndicator>

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignBottom="@+id/indicator_peschiera"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:onClick="maps"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/maps_icon" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/indicator_peschiera"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="@string/peschiera"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_marginLeft="5dp"
            android:paddingBottom="25dp"
            android:paddingRight="5dp"
            android:text="@string/peschieratesto"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

    </RelativeLayout>
</ScrollView>