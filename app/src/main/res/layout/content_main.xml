<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/coloreBarraDark"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sandro.irsina.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/textView14"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimaryDark"
        android:scrollbars="none">

    </WebView>

    <RelativeLayout
        android:id="@+id/fuori"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="-10dp"
            app:srcCompat="@drawable/sign_post" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            app:srcCompat="@drawable/fuori_mappa" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:text="@string/scegli"
        android:textColor="@android:color/background_light"
        android:textStyle="italic" />

    <RelativeLayout
        android:id="@+id/cambio_lingua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/webview"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/cambio"
            android:textColor="@android:color/black"
            android:textSize="8sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/cambio"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/textView13"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="2dp"
            android:onClick="cambioLingua"
            android:text="Cambio Lingua" />

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager_banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

</RelativeLayout>
